@model Demo1.Models.Question

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" style="margin-left:50px">
    <h4>新建问题</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" hidden>
        <input class="form-control text-box single-line" id="test_id" name="test_id" value="@ViewData["test_id"]" />
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.question_name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            <input class="form-control text-box single-line" id="question_name" name="question_name" type="text" value="">
            
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.question_chooseA, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            <input class="form-control text-box single-line" id="question_chooseA" name="question_chooseA" type="text" value="">
            <label><input name="question_answer" id="question_answer" type="radio" value="A" checked />正确答案</label>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.question_chooseB, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            <input class="form-control" id="question_chooseB" name="question_chooseB" type="text" style="display:inline-block">
            <input name="question_answer" id="question_answer" type="radio" value="B" style="display:inline-block" />正确答案
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.question_chooseC, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.question_chooseC, new { htmlAttributes = new { @class = "form-control" } })
            <label><input name="question_answer" id="question_answer" type="radio" value="C" />正确答案</label>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.question_chooseD, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.question_chooseD, new { htmlAttributes = new { @class = "form-control" } })
            <label><input name="question_answer" id="question_answer" type="radio" value="D" />正确答案</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    </div>
}


